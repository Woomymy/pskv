{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/*",
        "dist/"
    ],
    "compilerOptions": {
        "allowJs": true,
        "target": "esnext",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "dist",
        "module": "ES6",
        "esModuleInterop": true
    }
}