{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/*",
        "dist/"
    ],
    "compilerOptions": {
        "allowJs": false,
        "target": "esnext",
        "declaration": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "esnext",
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}